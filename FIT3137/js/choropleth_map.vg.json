{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Crime Index Global",
    "color": "white"
  },
  "width": 750,
  "height": 300,
  "background": "transparent",
  "config": {
    "view": {
      "stroke": "transparent"
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/ryanhaqueIT/DataViz/master/FIT3137/js/ne_110m_admin_0_countries.topojson",
    "format": {
      "type": "topojson",
      "feature": "custom.geo"
    }
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/ryanhaqueIT/DataViz/main/FIT3137/data/Country_CRI.csv"
        },
        "key": "country",
        "fields": ["Crimeindex"]
      }
    }
  ],
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape",
    "stroke": "white"
  },
  "encoding": {
    "color": {
      "field": "Crimeindex",
      "type": "quantitative",
      "scale": { "scheme": "orangered", "reverse": false },"legend": {
        "labelColor": "white",
        "titleColor": "white"
      },
      "title": "Crime Index"
    },
    "tooltip": [
      { "field": "properties.name", "type": "nominal", "title": "Country" },
      {
        "field": "Crimeindex",
        "type": "quantitative",
        "title": "Crime Index"
      }
    ]
  }
}
