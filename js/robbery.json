{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "Robberies in Australia"},
  "data": {
    "url": "data/robberytotal.csv"
  },
  "repeat": {
    "layer": ["Robbery"]
  },
  "spec": {
    "mark": "line",
    "encoding": {
      "x": {
        "field": "Year",
        "type": "ordinal",
        "title": "Year"
      },
      "y": {
        "field": {"repeat": "layer"},
        "type": "quantitative",
        "title": "Total Robbery cases "
      },
      "color": {
        "datum": {"repeat": "layer"},
        "type": "nominal"
      }
    }
  }
}


