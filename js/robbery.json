{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "Total Robberies in Australia"},
  "width": 350,
  "height": 200,
  "data": {
    "url": "data/robberytotal.csv"
  },
  "mark": {
    "type": "line",
    "color": "green",
    "point": {
      "filled": false,
      "fill": "white",
      "color": "green"
    }
  },
  "encoding": {
    "x":{
      "field": "Year",
      "type": "ordinal",
      "title": "Year"
    },
     "y": {
       "field": "Robbery",
       "type": "quantitative",
       "title": "Number of Robbery",
       "axis": {
        "labelAngle": 0
      }
       },
        "tooltip": [
          {"field": "Year", "type": "ordinal"},
          {"field": "Robbery", "type": "quantitative", "format": ","}
        ]

  }
}



